{
  "name": "koa-req-logger",
  "version": "1.3.2",
  "description": "A koa logging middleware, logs requests and errors. Also adds date and x-response-time to response headers.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "dependencies": {
    "pino": "^5.0.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/koa": "^2.0.46",
    "@types/pino": "^5.20.0",
    "@types/supertest": "^2.0.5",
    "@types/uuid": "^3.4.4",
    "http-errors": "^1.6.3",
    "jest": "^23.4.1",
    "koa": "^2.5.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testRegex": "(__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "bail": true,
    "testEnvironment": "node",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "repository": "github:DrBarnabus/koa-req-logger",
  "author": "DrBarnabus <drbarnabus@drbarnabus.com> (https://drbarnabus.com)",
  "license": "MIT",
  "keywords": [
    "koa",
    "logging",
    "logger",
    "request",
    "pino",
    "middleware",
    "X-Request-ID",
    "X-Response-Time",
    "http",
    "header",
    "json"
  ]
}
